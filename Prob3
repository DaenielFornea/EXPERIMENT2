#include <iostream>
#include <iomanip>
#include <cmath>
#include <conio.h>

using namespace std;

int main()
{
	int x,y;
	double z, V; 
	z = 2.5;
	setprecision(2);
	
	
	cout << "Enter the value of x: " <<; 
  cin >> x;
	cout << "Enter the value of y: " <<;
	cin >> y;
	

	switch (x)
	{	
		case 1:
		
		if(y > 1 && y < 5)
		
		{
		V = x*y*z;
		cout << "V = " << V << endl;
		}	
		
		else // (y >= 5)
		{
		V = x + (y / z);
		cout << "V = " << V << endl;
		}
		break;
		
		case 2:
		
		if (y <= 5)
		{
			V = abs((x-y)/z);
			cout << "V = " << V << endl;
		}
		
		else // y > 5 
		{
			V = x - (sqrt(y+z));
			cout << "V = " << V << endl;
		}
		break;
		
	}

	if(x>2) 
	{
		V = x+y+z;
		cout << "V = " << V << endl;
	}
	
_getch();
return 0;
	
}
