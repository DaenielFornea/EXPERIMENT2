#include <iostream>
#include <iomanip>
#include <conio.h>

using namespace std;
	
int main()	
{
    int a, sum, b;
    a = 0;
    sum = 0;
    
	cout << "Enter a number to get it's sum starting from 1: ";
	cin >> a;  
    
    while (a > 0)
    {
    	for(b=1; b <= a; ++b)
   		sum += b; 
    	cout << "The sum of the numbers up to " << a << " are = " << sum << endl;
    	cout << "Enter a number to get it's sum starting from 1: "; 
	    cin >> a;
    	sum = 0;
	}
	
	while (a <= 0)
	{
		cout << "THANK YOU" << endl;
		break;
	}
    
	_getch();
	return 0;
	
}
